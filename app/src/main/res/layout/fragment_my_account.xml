<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.MyAccountFragment">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:elevation="0dp">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginStart="16dp"
            android:text=""/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topRl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ordersWishlistLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:weightSum="2"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ordersTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:textSize="14dp"
                    android:layout_marginEnd="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Orders"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/wishlistTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/shape_rect_01"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Wishlist"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/couponsLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:weightSum="2"
                android:layout_below="@id/ordersWishlistLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/couponsTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:textSize="14dp"
                    android:layout_marginEnd="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Coupons"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/helpCenterTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/shape_rect_01"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Help Center"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:layout_below="@id/couponsLl"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/payLaterTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="FrenzyStore Pay Later"
                android:layout_below="@id/tv"
                android:drawableStart="@drawable/ic_pay_later"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <TextView
                android:id="@+id/profileBtn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="Edit Profile"
                android:layout_below="@id/payLaterTv"
                android:drawableStart="@drawable/ic_person_black"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>


            <TextView
                android:id="@+id/savedCardsTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="Saved Cards &amp; Wallets"
                android:layout_below="@id/profileBtn"
                android:drawableStart="@drawable/ic_wallet_black"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <TextView
                android:id="@+id/viewAllAddressBtn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="Saved Addresses"
                android:layout_below="@id/savedCardsTv"
                android:drawableStart="@drawable/ic_add_location_black"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <TextView
                android:id="@+id/notificationTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="Notification Settings"
                android:layout_below="@id/viewAllAddressBtn"
                android:drawableStart="@drawable/ic_notification_black"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <TextView
                android:id="@+id/myReviewsTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="My Reviews"
                android:layout_below="@id/notificationTv"
                android:drawableStart="@drawable/ic_reviews_black"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <TextView
                android:id="@+id/myQuestionsTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="My Questions &amp; Answer"
                android:layout_below="@id/myReviewsTv"
                android:drawableStart="@drawable/ic_outline_question_answer_24"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <TextView
                android:id="@+id/referTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="Refer &amp; Earn"
                android:layout_below="@id/myQuestionsTv"
                android:drawableStart="@drawable/ic_refer"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <TextView
                android:id="@+id/termsTv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="14dp"
                android:text="Terms, Policy &amp; Licences"
                android:layout_below="@id/referTv"
                android:drawableStart="@drawable/ic_terms"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:drawablePadding="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:drawableEnd="@drawable/ic_arrow_black"/>

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/shape_circle_01"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:text="Log Out"
                android:layout_below="@id/termsTv"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:elevation="20dp"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:theme="@style/Widget.AppCompat.ProgressBar"
        android:padding="5dp"
        android:background="@drawable/shape_circle_01"
        android:visibility="gone"
        android:layout_height="wrap_content" />

</RelativeLayout>