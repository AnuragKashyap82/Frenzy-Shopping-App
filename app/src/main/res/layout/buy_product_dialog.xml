<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="7dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" >

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_circle_01"
            android:backgroundTint="@color/successGreen"
            android:src="@drawable/ic_done_black"
            app:tint="@color/white"
            android:padding="8dp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay! 1 item added to cart"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@id/productImage"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="1 item added to cart"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_below="@id/tv"
            android:layout_toEndOf="@id/productImage"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/packedTv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/productImage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/packedTv"
            android:weightSum="2"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/closeDialogBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"
                android:text="Done"
                android:gravity="center"/>

            <TextView
                android:id="@+id/continueBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:text="Continue"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>