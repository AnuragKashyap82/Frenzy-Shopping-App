<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:background="@color/white"
    android:id="@+id/addressRl"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="12sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deliverTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Deliver to:"/>

        <TextView
            android:id="@+id/namePincodeTv"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/deliverTo"/>

    </LinearLayout>

    <TextView
        android:id="@+id/completeAddressTv"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_below="@id/ll"
        android:textStyle="normal"
        android:textColor="@color/gray02"
        android:textSize="14sp"
        android:text=""
        android:layout_marginStart="12sp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14sp"
        android:layout_marginTop="4dp"/>

    <View
        android:id="@+id/divider20"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/completeAddressTv"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delivery_black"
        app:tint="@color/gray02"
        android:layout_below="@id/divider20"
        android:layout_margin="14sp"/>

    <TextView
        android:id="@+id/deliveryFeeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Delivery"
        android:textColor="@color/successGreen"
        android:layout_toEndOf="@id/iv"
        android:layout_below="@id/divider20"
        android:layout_marginTop="14sp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/deliveryWithinTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/deliveryFeeTv"
        android:layout_below="@id/divider20"
        android:layout_marginTop="14sp"
        android:text="Deliver by 3-4 days"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_return_black"
        android:rotation="90"
        app:tint="@color/gray02"
        android:layout_below="@id/iv"
        android:layout_marginStart="14sp"
        android:layout_marginEnd="14sp"
        android:layout_marginBottom="14sp"/>

    <TextView
        android:id="@+id/returnPolicyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/iv1"
        android:layout_below="@id/deliveryFeeTv"
        android:text="10 days Return policy"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_money_black"
        app:tint="@color/gray02"
        android:layout_below="@id/iv1"
        android:layout_marginStart="14sp"
        android:layout_marginEnd="14sp"
        android:layout_marginBottom="14sp"/>

    <TextView
        android:id="@+id/codTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/iv1"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/returnPolicyTv"
        android:text="Cash on delivery available"
        android:layout_marginTop="19dp"
        android:textSize="14sp"
        android:textStyle="normal"/>

</RelativeLayout>