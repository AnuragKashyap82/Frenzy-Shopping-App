<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.OrderConfirmedActivity">

   <ImageView
       android:id="@+id/iv"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:src="@drawable/ic_done_black"
       app:tint="@color/white"
       android:layout_centerInParent="true"
       android:padding="32dp"
       android:layout_centerHorizontal="true"
       android:background="@drawable/shape_circle_01"
       android:backgroundTint="@color/successGreen"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Order Placed Successfully!!!!"
        android:layout_below="@id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/tv">

        <TextView
            android:id="@+id/orTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Id:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/orTv"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="45545415857745"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    </RelativeLayout>



</RelativeLayout>